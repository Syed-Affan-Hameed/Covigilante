<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tvcentername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Center Name"
            android:layout_margin="3dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_hospital"
            android:drawablePadding="3dp"
            android:padding="3dp"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tvcenterlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Center Location"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_location"
            android:layout_below="@+id/tvcentername"
            android:drawablePadding="3dp"
            android:layout_margin="3dp"
            android:padding="3dp"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tvcentertimings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Vaccination Timings"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_time"
            android:layout_below="@+id/tvcenterlocation"
            android:drawablePadding="3dp"
            android:layout_margin="3dp"
            android:padding="3dp"/>

        <LinearLayout
            android:layout_below="@+id/tvcentertimings"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:id="@+id/llvaccinedetails">

            <TextView
                android:id="@+id/tvvaccinename"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text=" Vaccination Name"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_vaccine"
                android:drawablePadding="3dp"
                android:layout_margin="3dp"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/tvvaccinefees"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" Fees"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/llvaccinedetails"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:id="@+id/llvaccineavail">

            <TextView
                android:id="@+id/tvagelimit"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Age Limit"
                android:textSize="14sp"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tvvaccineavailability"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                />

        </LinearLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView>