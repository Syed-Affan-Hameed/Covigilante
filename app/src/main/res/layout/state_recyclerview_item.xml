<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    android:id="@+id/cardViewRV">
    <LinearLayout
        android:id="@+id/llsecStaterv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtwwinfostaterv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State Name"
            android:textSize="18sp"
            android:padding="3dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:id="@+id/llwithweightstaterv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/llcasesstaterv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtcasesstaterv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cases"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/txtnumberofcasesstaterv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of Cases"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/llrecoveredstaterv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtrecoveredstaterv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recovered"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/txtrecoveriesstaterv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recoveries"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/llmortalitystaterv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtmortalitystaterv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mortality"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/txtnumberofdeathsstaterv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of deaths"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    />



            </LinearLayout>




        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>